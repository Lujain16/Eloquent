<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="7sp"
    android:paddingBottom="10sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="367dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:foregroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:foregroundGravity="center"
            android:gravity="center_horizontal|left|center_vertical"
            android:paddingRight="30dp"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textViewAnswer"
            android:layout_width="292dp"
            android:layout_height="50dp"
            android:layout_gravity="right|center_vertical"
            android:foregroundGravity="center"
            android:gravity="center_vertical"
            android:textColor="#000000"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imageButton_mic"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom|center|center_horizontal|center_vertical"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="10dp"
            app:srcCompat="@drawable/mic_icon" />

        <ImageButton
            android:id="@+id/imageButton_play"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom|left|center_horizontal|center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/imageButton_mic"
            app:srcCompat="@drawable/play_icon" />

        <ImageButton
            android:id="@+id/imageButton_stop"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom|right|center_horizontal|center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/stop_icon" />

        <ImageView
            android:id="@+id/imageViewQ"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:paddingRight="-16dp"
            android:src="@drawable/speaker_icon" />

        <ImageView
            android:id="@+id/imageViewA"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:paddingRight="-16dp"
            android:src="@drawable/speaker_icon" />

    </androidx.cardview.widget.CardView>
</LinearLayout>