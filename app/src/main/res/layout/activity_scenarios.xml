<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scenarios">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="411dp"
        android:layout_height="550dp"
        android:layout_marginTop="72dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardAtSchool"
                android:layout_width="383dp"
                android:layout_height="322dp"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center|top"
                    android:padding="@dimen/material_emphasis_medium"
                    android:text="A: How's it going?" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="359dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="B: I'm doing well. How about you?" />

                <ImageButton
                    android:id="@+id/imageButton_mic"
                    android:layout_width="51dp"
                    android:layout_height="41dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="96dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/imageButton_stop"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/imageButton_play"
                    app:srcCompat="@drawable/mic_icon" />

                <ImageButton
                    android:id="@+id/imageButton_play"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|left"
                    android:layout_marginStart="60dp"
                    android:layout_marginBottom="96dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/play_icon" />

                <ImageButton
                    android:id="@+id/imageButton_stop"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginEnd="60dp"
                    android:layout_marginBottom="96dp"
                    android:backgroundTint="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/stop_icon" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>